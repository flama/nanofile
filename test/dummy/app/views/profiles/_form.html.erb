<%= form_with(model: profile, local: true) do |form| %>
  <%= uploader_for :avatar, uploadable: profile %>

  <div class="input">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="input textarea">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="input">
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>

  <%= form.submit 'Save', class: 'button -large' %>
  <%= link_to 'Cancel', profiles_path, class: 'cancel' %>

<% end %>
